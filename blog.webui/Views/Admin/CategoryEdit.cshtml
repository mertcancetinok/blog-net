@model blog.entity.Category

@{
    ViewData["Title"] = "CategoryEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="CategoryEdit" class="mx-auto my-5 col-lg-6" >                    
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
            
    <div class="form-group">
        <label asp-for="IconClass" class="control-label"></label>
        <input asp-for="IconClass" class="form-control" />
        <span asp-validation-for="IconClass" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
   