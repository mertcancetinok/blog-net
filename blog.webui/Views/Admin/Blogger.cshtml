@model List<Blogger>
@{
    Layout = "_AdminLayout";
    ViewData["pageName"] = "Blogger";
}

<section class="blog-button p-3">
    <div class="container">
        <div class="row">
            <a class="btn btn-success p-4 mr-1" asp-controller="Admin" asp-action="BloggerCreate">Blogger Ekle</a>


        </div>
    </div>
</section>

<section class="blog-tables p-3 my-5">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <!-- DATA TABLE -->
                <h3 class="title-5 m-b-35">Bloggerlar</h3>
                <hr>

                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>
                            <tr>
                                <th>
                                    <label class="au-checkbox">
                                        <input type="checkbox">
                                        <span class="au-checkmark"></span>
                                    </label>
                                </th>
                                <th>Blogger Adı</th>
                                <th>Blogger Soyadı</th>
                                <th>Blogger İş Başlığı</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {

                                @foreach (var blogger in Model)
                                {
                                    <tr class="tr-shadow">
                                        <td>
                                            <label class="au-checkbox">
                                                <input type="checkbox">
                                                <span class="au-checkmark"></span>
                                            </label>
                                        </td>
                                        <td>@blogger.Name</td>
                                        <td>@blogger.Surname</td>
                                        <td>@blogger.JobTitle</td>


                                        <td>
                                            <div class="table-data-feature">



                                                <a href="/admin/bloggers/@blogger.Id" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                    <i class="zmdi zmdi-edit">
                                                    </i>
                                                </a>

                                                <form method="get" asp-controller="Admin" asp-action="BloggerDelete">
                                                    <input type="hidden" name="bloggerId" value="@blogger.Id" />
                                                    <button class="item blogger-delete" type="submit" data-toggle="tooltip" data-placement="top" title="Sil">
                                                        <i class="zmdi zmdi-delete">
                                                        </i>
                                                    </button>
                                                </form>

                                                <button class="item" data-toggle="tooltip" data-placement="top" title="More">
                                                    <i class="zmdi zmdi-more"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            }
                            else
                            {
                                <tr class="text-danger">Kayıt bulunumadı</tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- END DATA TABLE -->
            </div>
        </div>

    </div>
</section>

@section CustomJS{

    <script>
        $('.blogger-delete').click(function (e) {
            if (confirm("Silmek istediğine eminmisin")) {

            }
            else {
                e.preventDefault();
            }
        });
    </script>

}