@model BlogCategoriesViewModel
@{ 
    Layout = "_AdminLayout";
}

<form method="post" asp-controller="Admin" class="mx-auto my-5 col-lg-6" asp-action="BlogEdit">
    <div class="form-group">

        <label asp-for="@Model.Blog.Name"></label>
        <input class="form-control" asp-for="@Model.Blog.Name" />
        <span asp-validation-for="@Model.Blog.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Blog.Url"></label>
        <input class="form-control" asp-for="@Model.Blog.Url" disabled />
        <span asp-validation-for="@Model.Blog.Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Blog.ReadTime"></label>
        <input class="form-control" asp-for="@Model.Blog.ReadTime" />
        <span asp-validation-for="@Model.Blog.ReadTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Blog.ImageUrl"></label>
        <input class="form-control" asp-for="@Model.Blog.ImageUrl" />
        <span asp-validation-for="@Model.Blog.ReadTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Blog.Content"></label>
        <textarea rows="6" class="form-control" asp-for="@Model.Blog.Content"></textarea>
        <span asp-validation-for="@Model.Blog.Content" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success" />
</form>

@foreach (var category in Model.Categories)
{
    @category.Name;
}