@model blog.entity.Category

@{
    ViewData["Title"] = "CategoryCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


        <form asp-controller="Admin" asp-action="CategoryCreate" class="mx-auto my-5 col-lg-6" method="post">
            
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="IconClass" class="control-label"></label>
                <input asp-for="IconClass" class="form-control" required/>
                <span asp-validation-for="IconClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>




