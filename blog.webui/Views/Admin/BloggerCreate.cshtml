@model Blogger
@{ 
    Layout = "_AdminLayout";
}
<form method="post" asp-controller="Admin" asp-action="BloggerCreate" class="mx-auto my-5 col-lg-6">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" required/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input class="form-control" asp-for="Surname" required/>
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobTitle"></label>
        <input class="form-control" asp-for="JobTitle" required/>
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>
    <input type="submit" class="form-control btn btn-outline-success p-2" value="Gönder"/>
</form>