@model List<Category>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #1E1A17 !important;">
            <a class="navbar-brand" style="color: #A50712 !important;" href="#">News</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link text-white">Anasayfa</a></li>
                    @foreach (var item in Model)
                    {
                        <li class="nav-item @(ViewBag.SelectedCategory == item.Url?"active":"")"><a asp-controller="Home" asp-action="BlogList" asp-route-url="@item.Url" class="nav-link text-white">@item.Name</a></li>

                    }
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
            <ul class="navbar-nav ml-auto text-white">
                <li class="nav-item text-white">
                    <a href="/account/manage" class="nav-link text-white">
                        @User.Identity.Name
                        
                    </a>
                </li>
                @if (User.IsInRole("Admin") || User.IsInRole("Bloger"))
                {
                    <li class="nav-item">
                        <a href="/admin/" class="nav-link text-white">Yönetim Paneli</a>
                    </li>
                }
                <li class="nav-item ">
                    <a href="/account/logout" class="nav-link text-white">Logout</a>
                </li>
            </ul>
                }
                
            </div>
        </nav>
    </header>

