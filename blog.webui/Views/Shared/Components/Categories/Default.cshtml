@model List<Category>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #1E1A17 !important;">
            <a class="navbar-brand" style="color: #A50712 !important;" href="#">News</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="#" class="nav-link text-white">ANASAYFA</a></li>
                    @foreach (var item in Model)
                    {
                        <li class="nav-item @(ViewBag.SelectedCategory == item.Url?"active":"")"><a href="#" class="nav-link text-white">@item.Name</a></li>

                    }
                </ul>
            </div>
        </nav>
    </header>

