@model Blog

@if (Model != null)
{
    <li class="timeline-news">
        <div class="row">
            <div class="col-md-4">
                <img src="~/img/blog/@Model.ImageUrl" class="img-fluid" alt="Resim bulunamadı">
            </div>
            <div class="col-md-8">

                <p class="text-muted">@Model.ReadTime dk okuma süresi</p>
                <a target="_blank" href="https://www.totoprayogo.com/#">@Model.Name</a>
                <a href="#" class="float-right"><strong class="text-white">@Model.AddedTime</strong> </a>
                <p>@Html.Raw((Model.Content.Length > 300) ? $"{Model.Content.Substring(0, 300)} ..." : $"{Model.Content}")</p>
                <a class="btn btn-primary float-right mt-5 read-more read-more" asp-controller="Home" asp-action="BlogDetails" asp-route-url="@Model.Url">Devamını Oku</a>
            </div>
        </div>
    </li>
}
else
{
    <div class="alert alert-danger">
        <p>Hiçbir adet blog bulunamadı</p>
    </div>
}

