@model HomeModel
@{
    ViewData["Title"] = "Home";
}

<section class="popular p-5">
    <div id="slider" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{
                var b = 0;
                @for (int i = 0; i < Model.Popular.Count; i++)
                {
                    var itemClass = b++ == 0 ? "active" : " ";
                    <li data-target="#slider" data-slide-to="@(i)" class="@itemClass"></li>
                }

            }
        </ol>

        <div class="carousel-inner">            
            @{
                var a = 0;
                foreach (var item in Model.Popular)
                {
                    var itemClass = a++ == 0 ? "active" : " ";
                    <div class="carousel-item @itemClass">
                        <img class="d-block w-100 h-60" src="~/img/@item.ImageUrl" width="400" height="600" alt="First slide">
                        <div class="carousel-caption mb-3 d-none d-md-block">
                            <div class="carousel-category" style="color:white">
                                @foreach (var slidercategory in item.BlogCategories)
                                {
                                    <i class="@slidercategory.Category.IconClass ml-2"></i>
                                    <a href="#" class="d-inline-block font-weight-bold">
                                        @slidercategory.Category.Name
                                    </a>
                                }


                            </div>

                            <a class="text-left" href="#">@item.Name</a>
                            <p>Okunma Sayısı: @item.ClickCount</p>
                        </div>
                    </div>
                }
            }


        </div>
        <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>


    </div>



</section>

<section class="my-5 mx-3 news p-3">
    <h1 class="display-4 text-center">Haberler</h1>
    <hr class="my-4">
    <ul class="timeline">
        @if (Model.GetAll.Count > 0)
        {
            @foreach (var blog in Model.GetAll)
            {
                
                <li class="timeline-news">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="~/img/deneme.jpg" class="img-fluid" alt="Resim bulunamadı">
                        </div>
                        <div class="col-md-8">

                            <p class="text-muted">@blog.ReadTime dk okuma süresi</p>
                            <a target="_blank" href="https://www.totoprayogo.com/#">@blog.Name</a>
                            <a href="#" class="float-right"><strong class="text-white">@blog.AddedTime</strong> </a>
                            <p>@((blog.Content.Length>300)?$"{blog.Content.Substring(0,300)} ...":$"{blog.Content}")</p>
                            <a class="btn btn-primary float-right mt-5 read-more read-more" asp-controller="Home" asp-action="BlogDetails" asp-route-url="@blog.Url">Devamını Oku</a>
                        </div>
                    </div>
                </li>
            }


        }
        else
        {
            <div class="alert alert-danger">
                <h3>Aktif bir blog bulunamadı...</h3>
            </div>
        }
    </ul>
</section>


@section Scripts{ 
    <script>
        ScrollReveal().reveal('#slider ,.the-most-clicked,.the-most-clicked-small', {
            delay: 100,
            origin: 'top',
            distance: '5px'
        });
        ScrollReveal().reveal('.timeline-news p',{
            delay: 100,
            origin: 'left',
            distance: '10px'
        });
    </script>
}
